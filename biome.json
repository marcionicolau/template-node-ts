{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": true,
		"defaultBranch": "master"
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": []
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "asNeeded",
			"jsxQuoteStyle": "double",
			"arrowParentheses": "always",
			"bracketSpacing": true,
			"trailingComma": "all",
			"attributePosition": "auto",
			"bracketSameLine": true
		}
	},
	"json": {
		"formatter": {
			"indentSize": 2,
			"trailingCommas": "none"
		}
	}
}
